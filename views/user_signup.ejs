                    <input type="email" name="email" required> <i>Email Address</i>

                </div>

                <div class="inputBox">

                    <input name="password" type="password" required> <i>Password</i>

                </div>

                <div class="inputBox">

                    <input type="submit" value="Signup">

                </div>
                </form>
                <div class="bg-dark  d-flex justify-content-between align-items-center ">
                    <h6 class="text-light ma ">Already have an account</h6>
                    <a href="/login"  class="text-primary font-weight-bold ">Login</a>
                </div>
            </div>
           
        </div>
       
    
    </div>
  
